generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum Status {
  OPEN
  PLANNED
  IN_PROGRESS
  LIVE
  CLOSED
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)
  accounts      Account[]
  sessions      Session[]
  projects      Project[] /* Relation: User owns these projects */
  posts         Post[]
  votes         Vote[]
  comments      Comment[]
  createdAt     DateTime  @default(now())
}

model Project {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique // For professional URLs
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  posts     Post[]  /* Relation: Project has many posts */
}

model Post {
  id          String    @id @default(cuid())
  title       String
  slug        String    @unique
  description String
  status      Status    @default(OPEN)
  category    String    // e.g., "Feature", "Bug", "Integration"
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  /* Link Post to Project */
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  votes       Vote[]
  comments    Comment[]
}

model Vote {
  postId String
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@id([postId, userId]) // Prevents duplicate votes
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())

  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Necessary for NextAuth (Auth.js) adapters
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}